{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "pwa-node",
        "request": "launch",
        "name": "Debug Hardhat Script",
        "runtimeExecutable": "npx",
        "runtimeArgs": [
          "hardhat",
          "run",
          "${file}",
        ],
        "cwd": "${workspaceFolder}",
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "resolveSourceMapLocations": [
          "${workspaceFolder}/artifacts",
          "${workspaceFolder}/node_modules/**"
        ]
      }
    ]
  }